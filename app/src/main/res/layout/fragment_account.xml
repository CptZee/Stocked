<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_stocked_2">

    <TextView
        android:id="@+id/account_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:text="TextView"
        android:textColor="#08333b"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/account_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/account_fullname"
        app:layout_constraintStart_toStartOf="@+id/account_fullname"
        app:layout_constraintTop_toBottomOf="@+id/account_fullname" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/account_update"
        android:layout_width="287dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_background"
        android:drawableStart="@drawable/ic_edit"
        android:drawableEnd="@drawable/ic_go"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Update Account"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_email" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/account_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:drawableStart="@drawable/ic_lock"
        android:drawableEnd="@drawable/ic_go"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Change Password"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/account_update"
        app:layout_constraintStart_toStartOf="@+id/account_update"
        app:layout_constraintTop_toBottomOf="@+id/account_update" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/account_signout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:drawableStart="@drawable/ic_logout"
        android:drawableEnd="@drawable/ic_go"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Sign Out"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/account_password"
        app:layout_constraintStart_toStartOf="@+id/account_password"
        app:layout_constraintTop_toBottomOf="@+id/account_password" />
</androidx.constraintlayout.widget.ConstraintLayout>